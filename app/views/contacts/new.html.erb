<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-0">
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">

      <h1>Contact us</h1>
      <br />

      <%= form_for :contact, url: contacts_path do |f| %>

        <% if @contact && @contact.errors.any? %>

          <p>
            <% @contact.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
              <% end %>
          </p>
          <% end %>

            <p>
              <label class="sr-only" for="email">Email</label>
              <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
            </p>

            <p>
              <label class="sr-only" for="message">Message</label>
              <%= f.text_area :message, class: 'form-control', placeholder: 'Message', rows: 5 %>
            </p>

            <div class="text-right">
              <%= f.submit 'Send Message', class: 'btn btn-primary btn-md' %>
            </div>

            <% end %>

    </div>
  </div>
</div>