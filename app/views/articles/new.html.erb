<div class="container">
	<div class="row">
		<div class="col-md-3 col-sm-3 col-xs-0">
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">


			<h1>New article</h1>

			<%= form_for :article, url: articles_path do |f| %>
			
			<p>
				<%= f.label :title %> <br />
				<label class="sr-only" for="title">Title</label>
				<%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Title' %>
				<br />
			</p>

			<p>
				<%= f.label :text %> <br />
				<label class="sr-only" for="message">Text</label>
				<%= f.text_area :text, class: 'form-control', placeholder: 'Text', rows: 6 %>
			</p>

			<p>
			    <%= f.submit 'Post it now!', class: 'btn btn-success btn-md' %>
			</p>

			<% end %>

    	</div>
  	</div>
</div>