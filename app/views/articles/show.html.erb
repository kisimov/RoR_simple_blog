<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<h3>Comments</h3>
	<% @article.comments.each do |comment| %>
<p>
	<i> <%= comment.author %> said:	</i><br />
	<%= comment.body %>
</p>
	<% end %>

<h3>Add comment</h3>
<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %> <br />
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %> <br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
</p>

<% end %>