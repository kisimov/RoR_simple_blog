<div class="container">
	<div class="row">
		<div class="col-md-8 col-sm-8 col-xs-12">

			<h1><%= @article.title %></h1>
			
			<p>
				<%= @article.text %>
			</p>

			<hr>

			<h4>Comments</h4>
			<% @article.comments.each do |comment| %>
				<p>
					<i> <%= comment.author %> said:	</i><br />
					<%= comment.body %>

				</p>
				<br />
			<% end %>

			<h5>Add comment:</h5>
			<p>
			<%= form_for([@article, @article.comments.build]) do |f| %>
				<p>
					<%= f.label :author %> <br />
					<%= f.text_field :author %>
				</p>

				<p>
					<%= f.label :body %> <br />
					<label class="sr-only" for="message">Comment</label>
					<%= f.text_area :body, class: 'form-control', placeholder: 'Text', rows: 3 %>
				</p>

				<p>
					<%= f.submit 'Comment!', class: 'btn btn-success btn-md' %>
				</p>
			</p>

			<% end %>

		</div>
	</div>
</div>